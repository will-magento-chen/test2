.row
  .col-sm-9
    h1 Create an Event
    = simple_form_for @event, 
                      defaults: { wrapper_html: { class: "col-sm-6" }, input_html: { class: "form-control" }}, 
                      input_html: { class: "form-horizontal" } do |f|
      = render "form", f: f

      = link_to "Cancel", events_path, class: "btn btn-default"
      = f.submit "Create Event", class: "btn btn-primary"
